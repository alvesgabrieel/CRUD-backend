<h2>Lista de Postagens</h2>
<hr />
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}

  <div class="card mt-4">
    <div class="card-body">
      <h3>{{titulo}}</h3>
      <p>Descrição: {{descricao}}</p>
      <p>{{conteudo}}</p>
      <small>Data de criação: {{data}}</small>
      <br />
      <small> Categoria: {{categoria.nome}}</small>
      <br />
      <small>slug: {{slug}}</small>
      <br />
      <a href="/admin/postagens/edit/{{_id}}"><button
          class="btn btn-success mt-3"
        >Editar postagem</button></a>
      <form action="/admin/postagens/deletar" method="POST">
        <input type="hidden" id="id" values="" {{id}} />
        <button class="btn btn-danger mt-3">
          Deletar postagem
        </button>

      </form>

    </div>
  </div>

{{else}}
  <h4>Nenhuma postagem encontrada</h4>
{{/each}}